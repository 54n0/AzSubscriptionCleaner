{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountsName": {
            "defaultValue": "CleaningTools2",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "name": "[parameters('automationAccountsName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Basic"
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountsName'), '/Az.Accounts')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountsName'))]"
            ],
            "properties": {
                "contentLink": {
                    "uri": "https://github.com/FBoucher/AzSubscriptionCleaner/raw/arm-template-automation/deployment/modules/az.accounts.1.6.3.nupkg"
                }
            }
        },
        {
            "type": "Microsoft.Automation/AutomationAccounts/Modules",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountsName'), '/Az.ResourceGraph')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountsName'))]",
                <<ADD_DEPENDENCY_TO_MODULE_Az.Accounts_HERE
            ],
            "properties": {
                "contentLink": {
                    "uri": "https://github.com/FBoucher/AzSubscriptionCleaner/blob/arm-template-automation/deployment/modules/az.resourcegraph.0.7.6.nupkg"
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountsName'), '/Az.Resources')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountsName'))]",
                "Az.ResourceGraph"
            ],
            "properties": {
                "contentLink": {
                    "uri": "https://github.com/FBoucher/AzSubscriptionCleaner/blob/arm-template-automation/deployment/modules/az.resources.4.0.1-preview.nupkg"
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2018-06-30",
            "name": "[concat(parameters('automationAccountsName'), '/AzSubscriptionCleaner')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountsName'))]"
            ],
            "properties": {
                "runbookType": "PowerShell",
                "logVerbose": false,
                "logProgress": false,
                "logActivityTrace": 0,
                "publishContentLink": {
                    "uri": "https://raw.githubusercontent.com/FBoucher/AzSubscriptionCleaner/master/azure-automation/SubCleaner.ps1",
                    "version": "1.0"
                    },
                "description": "Simple script to delete resources"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/schedules",
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('automationAccountsName'), '/EveryMorning')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountsName'))]"
            ],
            "properties": {
                "startTime": "2019-10-15T05:15:00-04:00",
                "expiryTime": "2020-10-31T17:15:00-04:00",
                "interval": 1,
                "frequency": "Day",
                "timeZone": "America/Toronto"
            }
        }
    ]
}